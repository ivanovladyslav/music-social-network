include ../layout/head.jade
	body
		block content
			div.container-form
				h2 Login Form
				form(method='post', action='/user/login_submit/')
					div.row
						div.col-md-12.form-group
							input.form-control(name="email" type="text" placeholder="Username")
					div.row
						div.col-md-12.form-group
							input.form-control(name="password" type="password" placeholder="Enter your Password")
					div.row
						div.col-md-12.form-group
							input.btn.btn-primary(type="submit" class="btn btn-block btn-login" placeholder="Enter your Password")
					div.row
						div.col-md-12
							a(href="/user/signup") Register
        
	
			
